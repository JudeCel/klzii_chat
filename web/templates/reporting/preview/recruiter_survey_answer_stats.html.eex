<%= for question <- @survey_questions do %>
  <div class='media'>
    <div class='media-left media-top'>
      <div class='media-heading'>
      </div>

      <div class='media-body'>
        <span class='col-md-4 question-name'>
          <%= question.name %>
        </span>
        <div class='col-md-8'>
          <%= for answer <- get_answers(question) do %>
            <div class='col-md-4 answere-name'>
              <%= answer.name %>
            </div>
            <div class='col-md-4 answere-count'>
              <%= answer.count %>
            </div>
            <div class='col-md-4 answere-percents'>
              <%= answer.percents %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <hr/>
  </div>
<% end %>
