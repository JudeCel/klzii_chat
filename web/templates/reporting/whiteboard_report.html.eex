<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Klzii Chat Whiteboard</title>
    <link rel="stylesheet" type = "text/css" href="<%= Path.expand("./web/static/css/reporting/whiteboard_styles.css") %>">
    <script type="text/javascript" src="<%= Path.expand("./web/static/js/reporting/snap.svg-min.js") %>"></script>
    <script type="text/javascript" src="<%= Path.expand("./web/static/js/reporting/whiteboard_report.js") %>"></script>
  </head>

  <body>
    <svg class="whiteboard"></svg>
  </body>

  <script>
    var wb_events = <%= Poison.encode!(@wb_events) %>
    wb_events.forEach(function(event) {
      if(event.action == "draw") {
        draw("whiteboard", event.element.type, event.element.attr, "<%= Path.expand("./web/static/assets") %>"); <%# TODO: correct full path to images upload folder %>
      }
    });
  </script>
</html>
